= form_for(@reminder) do |f|
  - if @reminder.errors.any?
    #error_explanation
      %p
        = pluralize(@reminder.errors.count, " error") +  " ao salvar lembrete:"
      %ul
        - @reminder.errors.full_messages.each do |msg|
          %li
            = msg
  Nome:
  %br
  = f.text_field :name
  %br

  Horário:
  %br
  = f.time_select :time, default: { hour: '00', minute: '00' }
  %br

  Quantidade de Dias:
  %br
  = f.text_field :days
  %br

  Dia de Início:
  %br
  = f.date_select :start_at
  %br

  %br
  = f.submit "Atualizar", class: 'button'