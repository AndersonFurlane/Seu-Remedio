<table>
  <thead>
    <tr>
      <td>Nome</td>
      <td>Horario</td>
      <td>Quantidade de Dias</td>
      <td>Dia inicial</td>
      <td>Editar</td>
    </tr>
  </thead>
  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.name %></td>
        <td><%= l reminder.time %></td>
        <td><%= reminder.days %></td>
        <td><%= l reminder.start_at, format: :short %></td>
        <td><%= link_to 'Editar', [:edit, reminder] %>
      </tr>
    <% end %>
  </tbody>